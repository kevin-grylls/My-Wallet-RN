{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "importHelpers": true,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "components/*": ["./components/*"],
      "constants/*": ["./constants/*"],
      "screen/*": ["./screen/*"],
      "assets/*": ["./assets/*"],
      "stores/*": ["./stores/*"],
      "utils/*": ["./utils/*"],
      "models/*": ["./models/*"]
    }
  },
  "exclude": ["node_modules"]
}
